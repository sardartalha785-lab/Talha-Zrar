{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Banner Title",
      "default": "Your Banner Title"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Banner Subtitle",
      "default": "Your Banner Subtitle"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}

<section class="custom-banner">
  <div class="banner-content">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-btn">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>
